---
interface Props {
  href?: string;
  text: string;
  isCategory?: boolean;
}

const { href, text, isCategory = false } = Astro.props;

const styles = isCategory
  ? 'bg-gradient-to-br from-gray-900 to-blue-900 text-white'
  : 'bg-gray-100 hover:bg-gray-200 text-gray-700';

const baseStyles = 'inline-block px-4 py-1.5 text-sm font-medium rounded-full transition-colors';
---

<a
  href={href}
  class={`${baseStyles} ${styles}`}
>
  {isCategory ? text : `#${text}`}
</a>
